@model MethodicalSupportDisciplines.Shared.ViewModels.Forms.Auth.LoginViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<form method="post" asp-controller="Auth" asp-action="Login" asp-antiforgery="true" autocomplete="off">
    <div asp-validation-summary="All"></div>
    <div>
        <input asp-for="Email" placeholder="Email">
    </div>
    <div>
        <input asp-for="Password" placeholder="Password">
    </div>
    <div>
        <input asp-for="RememberMe"><label asp-for="RememberMe">Remember me?</label>
    </div>
    <button type="submit">Login</button>
    <div>
        <a asp-controller="Auth" asp-action="RemindPassword">Forget password</a>
    </div>
</form>
</body>
</html>