@{
    ViewData["Title"] = ViewLocalization["Title"];
}

@await Html.PartialAsync("_MainFormsBackground")

<div class="auth-form">
    <form>
        @if (ViewData.ModelState.ErrorCount != 0)
        {
            <h1 class="without-forms">@ViewLocalization["ErrorResult"]</h1>
            <div class="form-errors">
                <div asp-validation-summary="All"></div>
            </div>
        }
        else
        {
            <h1 class="without-forms">@ViewLocalization["ResultTitle"]</h1>
            <div class="form-group">
                <p>
                    @ViewLocalization["GoTo"]
                    <a asp-controller="Auth" asp-action="Login">@ViewLocalization["LoginButton"]</a>
                </p>
            </div>
        }
    </form>
</div>