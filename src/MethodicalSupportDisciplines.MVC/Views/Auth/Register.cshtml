@model MethodicalSupportDisciplines.Shared.ViewModels.Forms.Auth.RegisterViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<form method="post" asp-controller="Auth" asp-action="Register" asp-antiforgery="true" autocomplete="off">
    <div asp-validation-summary="All"></div>
    <div>
        <input asp-for="Username" placeholder="Username">
    </div>
    <div>
        <input asp-for="Email" placeholder="Email">
    </div>
    <div>
        <input asp-for="Password" placeholder="Password">
    </div>
    <div>
        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
    </div>
    <button type="submit">Register</button>
</form>
</body>
</html>